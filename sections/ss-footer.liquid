{{ 'ss-main-page.css' | asset_url | stylesheet_tag }}
<script src="{{ 'ss-footer.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'ss-newsletter-popup.js' | asset_url }}" defer="defer"></script>

<style>
  .background-black {
    background-color: #000;
    color: #fff;
  }
  .separator {
    border: none;
    border-top: 1px solid #1c1c1c; /* Change the color as needed */
    width: 100%;
    margin: 10px 0;
  }

  .footer-list {
    list-style: none;
    margin: 0 0;
    padding: 0 0;
    font-family: 'Oswald', sans-serif;
    font-weight: 700;
    text-transform: uppercase;
    display: flex;
    justify-content: center;
    column-gap: 2rem;
    font-size: 14px;
    flex-wrap: wrap;
    text-align: center;
  }
  .footer-grid-item:last-child .footer-list li {
    font-size: 10px;
  }
  .footer-list li {
    transition: color 0.3s ease;
  }
  .footer-list li a {
    color: #ffffff;
    text-decoration: none;
    transition: color 0.3s ease;
  }
  .footer-list li:not(.copyright):hover {
    color: #e7c289;
    cursor: pointer;
  }
  .footer-list li a:hover {
    color: #e7c289;
  }
  .footer-list svg {
    transform: scale(1.5);
    margin: 0 0.5rem !important;
  }
  .footer-list svg:not(.discord-svg) {
    height: 15px;
    width: 15px;
    color: #ffffff;
  }
  .footer-list .discord-svg {
    height: 25px;
    width: 25px;
    color: #ffffff;
  }
  .footer-list svg:hover {
    color: #e7c289;
  }
  @media screen and (min-width: 990px) {
    .separator {
      display: none;
    }
    .footer-grid-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      position: relative;
    }
    .center-grid {
      position: absolute;
      {% comment %} top: 50%; {% endcomment %}
      left: 50%;
      transform: translateX(-50%);
    }
  }
</style>

